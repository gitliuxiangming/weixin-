.article-box{
  width:100%;
}
.article-item{
  margin-top: 20rpx;
  flex-direction: column;
  border: 1px solid #ccc;
  margin-bottom: 20rpx;
  width:100%;
}
.article-head{
  display: flex;
  justify-content:space-between;
  padding:10px 10px;
  
}
.article-head-avatar{
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
}
.article-head-time{
  font-size: 14px;
}
.article-title{
  font-size: 20px;
  font-weight: bold;
}
.article-body{
  margin-bottom: 20px;
}
.article-body-image{
  width: 100%;
}
.article-body-description{
  font-size: 14px;
}
.article-footer{
  width:100% ;
  display: flex;
  justify-content:space-around;
}
.article-footer-item{
  display: flex;
  justify-content:space-around;
}
.article-footer image{
  width: 20px;
  height: 20px;
  margin-right: 10px;
}
.article-footer text{
  color: #aaa;
}
