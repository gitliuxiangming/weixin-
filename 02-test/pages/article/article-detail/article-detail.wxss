.detail-img-box{
  position: relative;
  width: 100%;
  height:480rpx;
}
.detail-img-big{
  width: 100%;
  height: 100%;
  position: absolute;
}
.detail-img-small{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  position: absolute;
  top: 160rpx;
  left: 300rpx;
}
.detail-author{
  width: 100%;
  font-size: 14px;
  color: #333;
  height: 60px;
  display: flex;
  margin-top: 20px;
}
.detail-author-img{
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  margin-left: 20px;
  margin-right: 20rpx;
  
}
.detail-share{
  width: 100%;
  height: 200rpx;
  position: relative;
}
.detail-share-keep{
  width: 30px;
  height: 30px;
  position: absolute;
  top: 75rpx;
  right: 200rpx;
  border-radius: 50%;
  z-index: 9;
}
.detail-share-sharing{
  width: 30px;
  height: 30px;
  position: absolute;
  top: 75rpx;
  right: 100rpx;
  border-radius: 50%;
  z-index: 9;
}
.detail-share-line{
  width: 600rpx;
  height: 2px;
  background: #ccc;
  position: absolute;
  top: 100rpx;
  right: 100rpx;
}
.detail-content{
  width: 100%;
  font-size: 14px;
  padding: 20px;
}